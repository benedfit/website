{
  "name": "benedfit.com",
  "version": "3.0.0",
  "description": "Personal website of Ben Edwards, a Web Designer and Developer",
  "private": true,
  "scripts": {
    "prepare": "is-ci || husky install",
    "start": "pliers go -o",
    "build": "pliers build",
    "pretest": "npm-run-all build lint",
    "test": "istanbul cover --report=text-summary mocha",
    "lint": "npm-run-all --parallel lint:*",
    "lint:js": "yarn lint-staged:js --cache .",
    "lint:css": "yarn lint-staged:css --cache '**/*.styl'",
    "lint:pug": "yarn lint-staged:pug .",
    "lint-staged:js": "eslint --ignore-path .gitignore",
    "lint-staged:css": "stylelint --ignore-path .gitignore",
    "lint-staged:pug": "pug-lint",
    "format": "npm-run-all --parallel format:*",
    "format:js": "yarn lint:js --fix",
    "format:css": "yarn lint:css --fix"
  },
  "dependencies": {
    "any-newer-files": "0.0.4",
    "async": "3.2.5",
    "autoprefixer-stylus": "1.0.0",
    "browser-sync": "3.0.2",
    "clean-css": "5.3.3",
    "configury": "0.3.0",
    "front-matter": "4.0.2",
    "fs-extra": "11.2.0",
    "glob": "10.3.10",
    "html-minifier": "4.0.0",
    "jade": "1.11.0",
    "lodash.merge": "4.6.2",
    "mkdirp": "3.0.1",
    "moment": "2.30.1",
    "namp": "0.2.26",
    "rfg-api": "0.5.3",
    "stylus": "0.63.0",
    "stylus-mixins": "0.4.0",
    "stylus-renderer": "1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.2.0",
    "@newhighsco/commitlint-config": "1.1.36",
    "@newhighsco/editor-config": "1.2.0",
    "@newhighsco/eslint-config": "4.0.153",
    "@newhighsco/prettier-config": "2.1.22",
    "eslint": "8.57.0",
    "husky": "9.0.11",
    "is-ci": "3.0.1",
    "istanbul": "0.4.5",
    "lint-staged": "15.2.2",
    "mocha": "10.3.0",
    "npm-run-all": "4.1.5",
    "pliers": "1.2.1",
    "pliers-clean-shrinkwrap": "1.0.1",
    "pliers-imagemin": "3.0.2",
    "pliers-npm-security-check": "1.0.0",
    "prettier": "3.2.5",
    "pug-lint": "2.7.0",
    "pug-lint-config-clock": "2.0.0",
    "stylelint": "16.2.1",
    "stylelint-stylus": "1.0.0"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@newhighsco"
    ]
  },
  "lint-staged": {
    "*.{js?(on)}": "yarn lint-staged:js --fix",
    "*.css": "yarn lint-staged:css --fix",
    "*.pug": "yarn lint-staged:pug"
  },
  "prettier": "@newhighsco/prettier-config",
  "renovate": {
    "extends": [
      "@newhighsco"
    ],
    "baseBranches": [
      "main"
    ],
    "reviewers": [
      "@benedfit"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-stylus/standard"
    ]
  }
}
