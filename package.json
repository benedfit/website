{
  "name": "benedfit.com",
  "version": "3.0.0",
  "description": "Personal website of Ben Edwards, a Web Designer and Developer",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "start": "pliers go -o",
    "build": "pliers build",
    "pretest": "yarn lint",
    "test": "jest --coverage",
    "lint": "concurrently yarn:lint:*",
    "lint:js": "yarn lint-staged:js --cache .",
    "lint:css": "yarn lint-staged:css --cache '**/*.styl'",
    "lint:pug": "yarn lint-staged:pug .",
    "lint-staged:js": "eslint",
    "lint-staged:css": "stylelint --ignore-path .gitignore",
    "lint-staged:pug": "pug-lint",
    "format": "concurrently yarn:format:*",
    "format:js": "yarn lint:js --fix",
    "format:css": "yarn lint:css --fix"
  },
  "dependencies": {
    "@realfavicongenerator/generate-favicon": "0.6.2",
    "@realfavicongenerator/image-adapter-node": "0.6.1",
    "any-newer-files": "0.0.4",
    "async": "3.2.6",
    "autoprefixer-stylus": "1.0.0",
    "browser-sync": "3.0.4",
    "clean-css": "5.3.3",
    "configury": "0.3.0",
    "front-matter": "4.0.2",
    "fs-extra": "11.3.3",
    "glob": "13.0.5",
    "html-minifier": "4.0.0",
    "jstransformer-uglify-js": "1.2.0",
    "lodash.merge": "4.6.2",
    "mkdirp": "3.0.1",
    "moment": "2.30.1",
    "namp": "0.2.26",
    "pug": "3.0.3",
    "stylus": "0.64.0",
    "stylus-mixins": "0.4.0",
    "stylus-renderer": "1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "20.4.2",
    "@newhighsco/commitlint-config": "1.1.49",
    "@newhighsco/editor-config": "1.2.0",
    "@newhighsco/eslint-config": "7.0.10",
    "@newhighsco/prettier-config": "2.3.3",
    "concurrently": "9.2.1",
    "eslint": "10.0.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.7",
    "pliers": "1.2.1",
    "pliers-imagemin": "3.0.2",
    "prettier": "3.8.1",
    "pug-lint": "2.7.0",
    "pug-lint-config-clock": "2.0.0",
    "stylelint": "17.3.0",
    "stylelint-stylus": "1.0.0"
  },
  "commitlint": {
    "extends": [
      "@newhighsco"
    ]
  },
  "lint-staged": {
    "*.{js?(on)}": "yarn lint-staged:js --fix",
    "*.css": "yarn lint-staged:css --fix",
    "*.pug": "yarn lint-staged:pug"
  },
  "prettier": "@newhighsco/prettier-config",
  "pugLintConfig": {
    "extends": "clock",
    "validateExtensions": null,
    "requireSpaceAfterCodeOperator": [
      "=",
      "!="
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-stylus/standard"
    ]
  }
}
